- content_for :head_javascripts do
  = javascript_include_tag "/concen/javascripts/user.js"

#content
  %h1
    Users
    = link_to "New User", new_concen_user_path, :class => "link-button"
    = link_to "Invite New User", new_invite_concen_users_path, :class => "link-button"
  %table.users
    %thead
      %tr
        %th Username
        %th Full Name
        %th Email
        %th Sign Up On
        %th Pages
        %th Full Control
    %tbody
      - for user in @users
        %tr
          %td= user.username
          %td= user.full_name
          %td= mail_to user.email, user.email, :encode => "javascript"
          %td= user.created_at.strftime("%d %B %Y")
          %td= Concen::Page.where(:authors.in => [user.username, user.full_name, user.email]).count
          %td.center
            = check_box_tag "full_control", 1, user.full_control, "data-path" => toggle_attribute_concen_user_path(user), :disabled => user == current_concen_user || !current_concen_user.full_control
