= form_for [@page, @grid_file], :url => control_center_page_grid_file_path(@page, @grid_file), :html => {:class => "with-text-editor"} do |f|
  - if @grid_file.errors.any?
    #errorExplanation
      %h3= "#{pluralize(@page.errors.count, "error")} prohibited this parent from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field.thick-border
    .border
      #text-editor.wide
      .shadow-right
        .corner
      .shadow-bottom
        .corner
  = text_area_tag :control_center_grid_file_page, @grid_file.read.force_encoding("utf-8"), :class => "text-editor-content hidden"
  .actions.flush
    = f.submit "Save"
    = link_to "Delete", control_center_page_grid_file_path(@page, @grid_file), :method => :delete
    = link_to "Cancel", edit_control_center_page_path(@page)
