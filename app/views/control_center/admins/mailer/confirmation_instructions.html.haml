.container{:style => "margin:30px"}
  .header{:style => "border-bottom: 1px solid #dadada"}
    %h1{:style => "font-size: 24px; font-weight: normal; line-height: normal; margin-bottom: 16px; padding: 0; font-family: 'Helvetica Neue', Heletica, Arial, sans-serif;"}
      = t("devise.mailer.confirmation_instructions.subject").titlecase
  .content{:style => "margin-top:30px"}
    %p= "Hello #{@resource.full_name},"
    %p You can confirm your account through the link below.
    %p= link_to "Confirm my account", confirmation_url(@resource, :confirmation_token => @resource.confirmation_token)
  .footer{:style => "margin-top:30px;border-top: 1px solid #dadada;padding-top: 16px"}
    %p.logo{:style => "display: block; float: left; margin-bottom: 0"}
      %a{:href => root_url}
        = image_tag "#{root_url}images/logo-small.png"
    %p{:style => "float: left; line-height: 40px; margin-left: 20px; font-size: 11px; font-weight: 500; margin-bottom: 0"}
      = t(:tagline)