#header
	%h1 Change Your Password
#content.relative
	- if devise_error_messages!.present?
		.flash_messages
			%p.alert Failed to submit the form. Please review the form again.
	= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
		= f.hidden_field :reset_password_token
		.field
			= f.label :password, :class => 'wide'
			= f.password_field :password
			- error_message_for resource, :password
		.field
			= f.label :password_confirmation, :class => 'wide'
			= f.password_field :password_confirmation
			- error_message_for resource, :password_confirmation
		.actions.wide
			= f.submit "Change my password"
	.side-panel
		= render :partial => "users/shared/links"