- content_for :head_javascripts do
  = javascript_include_tag "/control_center/javascripts/ace/ace.js"
  = javascript_include_tag "/control_center/javascripts/fileuploader.js"

#content
  %h2 Edit Content
  .clearfix
    = render "form"
    #files
      #file-uploader{:data => {"upload-path" => upload_file_control_center_content_path(@content)}}
        %noscript
          %p Please enable JavaScript to use file uploader.
      - if @content.grid_files.count > 0
        %ul
          - @content.grid_files.each_with_index do |file, index|
            %li{:class => index+1 == @content.grid_files.count && "last"}
              %span= file.original_filename
              - if file.text?
                = link_to "Edit", edit_control_center_content_grid_file_path(@content, file)
              - else
                = link_to "View", file.url
              = link_to "Delete", control_center_content_grid_file_path(@content, file), :method => :delete, :confirm => "Are you sure?"